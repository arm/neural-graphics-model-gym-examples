{
    "config_schema_version": "2",
    "model": {
        "name": "NSS",
        "version": "1"
    },
    "dataset": {
        "name": "NSS",
        "version": "1",
        "path": {
            "train": "./data/nss/datasets/train/bistro",
            "validation": "./data/nss/datasets/val/bistro",
            "test": "./data/nss/datasets/test/"
        },
        "exposure": 2,
        "tonemapper": "reinhard",
        "health_check": false,
        "recurrent_samples": 8,
        "gt_augmentation": true,
        "num_workers": 4,
        "prefetch_factor": 1
    },
    "output": {
        "dir": "./output",
        "export_frame_png": false,
        "tensorboard_output_dir": "./tensorboard-logs",
        "export": {
            "dynamic_shape": true,
            "vgf_output_dir": "./output/vgf"
        }
    },
    "metrics": [
        "PSNR",
        "tPSNR",
        "RecPSNR",
        "SSIM"
    ],
    "train": {
        "batch_size": 8,
        "scale": 2.0,
        "seed": 123456,
        "perform_validate": true,
        "validate_frequency": 1,
        "loss_fn": "loss_v1",
        "fp32": {
            "number_of_epochs": 4,
            "checkpoints": {
                "dir": "./checkpoints"
            },
            "lr_scheduler": {
                "type": "cosine_annealing",
                "warmup_percentage": 0.05,
                "min_lr": 6e-5
            },
            "optimizer": {
                "optimizer_type": "lars_adam",
                "learning_rate": "6e-3"
            }
        },
        "qat": {
            "number_of_epochs": 4,
            "checkpoints": {
                "dir": "./checkpoints/qat_checkpoints"
            },
            "lr_scheduler": {
                "type": "cosine_annealing",
                "warmup_percentage": 0.05,
                "min_lr": 1e-05
            },
            "optimizer": {
                "optimizer_type": "lars_adam",
                "learning_rate": "6e-4"
            }
        }
    },
    "processing": {
        "shader_accurate": false
    }
}